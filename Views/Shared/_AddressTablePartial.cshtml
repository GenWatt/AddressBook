@using AddressBook.Models
@model IEnumerable<UserModel>

<table class="table">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>City</th>
            <th>Country</th>
            <th>Zip</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Address.City</td>
                <td class="d-flex align-items-center gap-1">
                    <img class="img-flag" src="@user.Address.CountryFlagUrl" alt="@user.Address.CountryCode">
                    <span>@user.Address.Country</span>
                </td>
                <td>@user.Address.Zip</td>

                <td>
                    <a asp-controller="User" asp-action="Details" asp-route-userId="@user.Id">Details</a> |
                    <a asp-controller="User" asp-action="DeleteAddress" asp-route-userToDeleteId="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
