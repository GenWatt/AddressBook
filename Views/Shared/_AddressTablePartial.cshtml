@using AddressBook.Models
@model IEnumerable<AddressModel>

<table class="table">
    <thead>
        <tr>
            <th>Flag</th>
            <th>E-mail</th>
            <th>City</th>
            <th>Country</th>
            <th>Zip</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>
                    <img src="@address.CountryFlagUrl" alt="@address.CountryCode">
                </td>
                <td>@address.User.Email</td>

                <td>@address.City</td>
                <td>@address.Country</td>
                <td>@address.Zip</td>
                <td>@address.CreatedAt</td>
                <td>
                    @if (address.UpdatedAt != null)
                    {
                        @address.UpdatedAt
                    }
                    else
                    {
                        <span class="text-muted">Never updated</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@address.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@address.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
