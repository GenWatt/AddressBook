@using AddressBook.Models
@model IEnumerable<AddressModel>

@{
    ViewData["Title"] = "Address Book";
}

<header>
    <h1>Address Book</h1>
</header>

<a class="btn btn-primary" asp-action="AddAddress" asp-controller="Address">Add Address</a>

<section>
    @if (Model.Any())
    {
        <partial name="_AddressTablePartial" model="@Model" />
    } else
    {
        <p>No addresses found.</p>
    }
</section>